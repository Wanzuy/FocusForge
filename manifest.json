{
    "manifest_version": 3,
    "name": "FocusForge",
    "version": "1.0.0",
    "description": "Giúp duy trì sự tập trung trong giờ làm việc bằng cách chặn các trang web gây xao nhãng với sự linh hoạt và tự chủ",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "alarms",
        "declarativeNetRequest"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "FocusForge",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["block.html", "styles/block.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ]
}
